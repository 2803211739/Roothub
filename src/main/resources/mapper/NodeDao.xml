<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.roothub.dao.NodeDao">
    <resultMap id="BaseResultMap" type="cn.roothub.entity.Node">
        <id column="node_id" jdbcType="INTEGER" property="nodeId"/>
        <result column="node_code" jdbcType="VARCHAR" property="nodeCode"/>
        <result column="node_title" jdbcType="VARCHAR" property="nodeTitle"/>
        <result column="node_img" jdbcType="VARCHAR" property="nodeImg"/>
        <result column="node_bg_img" jdbcType="VARCHAR" property="nodeBgImg"/>
        <result column="node_desc" jdbcType="VARCHAR" property="nodeDesc"/>
        <result column="tab_id" jdbcType="INTEGER" property="tabId"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate"/>
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate"/>
        <result column="is_delete" jdbcType="BIT" property="isDelete"/>
    </resultMap>
    <sql id="Base_Column_List">
        node_id, node_code, node_title, node_img, node_bg_img, node_desc,tab_id,create_date,update_date,is_delete
    </sql>
    <!-- 根据板块查询节点 -->
    <select id="selectAllByTab" resultType="Node">
        SELECT
        	A.*
        FROM
        	NODE A,TAB B
       	WHERE 
       		A.TAB_ID = B.ID
        <if test="tabName != null">
        	AND B.TAB_NAME = #{tabName}
        </if>
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
    <!-- 根据节点编码查询节点 -->
    <select id="selectByNodeCode" resultType="Node">
    	SELECT
        	<include refid="Base_Column_List"/>
        FROM
        	NODE A
        <if test="nodeCode != null">
        	WHERE A.NODE_CODE = #{nodeCode}
        </if>
    </select>
     <!-- 相邻节点 -->
    <select id="selectAtherByNodeCode" resultType="Node">
        SELECT
        	b.*
        FROM
        	node a,
			node b
       	WHERE 
       		a.tab_id = b.tab_id
        <if test="nodeCode != null">
        	AND a.node_code = #{nodeCode}
        	AND b.node_code != #{nodeCode}
        </if>
        <if test="start != null">
            LIMIT #{start,jdbcType=INTEGER}
            <if test="limit != null">
                ,#{limit,jdbcType=INTEGER}
            </if>
        </if>
    </select>
</mapper>